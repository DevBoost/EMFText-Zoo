<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>
	<extension point="org.eclipse.emf.ecore.extension_parser">
		<parser class="org.emftext.language.bool.resource.bool.mopp.BoolResourceFactory" type="bool">
		</parser>
	</extension>
	
	<extension point="org.emftext.access.syntax">
		<metaInformationProvider class="org.emftext.language.bool.resource.bool.mopp.BoolMetaInformation" id="org.emftext.language.bool.resource.bool.mopp.BoolMetaInformation">
		</metaInformationProvider>
	</extension>
	
	<extension point="org.eclipse.core.contenttype.contentTypes">
		<content-type id="org.emftext.filetype.bool" name="EMFText bool Files">
		</content-type>
		<file-association content-type="org.emftext.filetype.bool" file-extensions="bool">
		</file-association>
	</extension>
	
	<extension point="org.eclipse.ui.editors">
		<editor class="org.emftext.language.bool.resource.bool.ui.BoolEditor" contributorClass="org.eclipse.ui.texteditor.BasicTextEditorActionContributor" icon="icons/editor_icon.gif" id="org.emftext.language.bool.resource.bool.ui.BoolEditor" name="EMFText bool Editor">
			<contentTypeBinding contentTypeId="org.eclipse.core.runtime.text">
			</contentTypeBinding>
			<contentTypeBinding contentTypeId="org.emftext.filetype.bool" >
			</contentTypeBinding>
		</editor>
	</extension>
	
	<extension point="org.eclipse.core.runtime.preferences">
		<initializer class="org.emftext.language.bool.resource.bool.ui.BoolPreferenceInitializer">
		</initializer>
	</extension>
	
	<extension point="org.eclipse.ui.newWizards">
		<category id="org.emftext.runtime.ui.EMFTextFileCategory" name="EMFText File">
		</category>
		<wizard category="org.emftext.runtime.ui.EMFTextFileCategory" icon="/icons/default_new_icon.gif" class="org.emftext.language.bool.resource.bool.ui.BoolNewFileWizard" id="org.emftext.language.bool.resource.bool.ui.BoolNewFileWizard" name="EMFText .bool file">
		</wizard>
	</extension>
	
	<extension id="org.emftext.language.bool.resource.bool.problem" name="EMFText Problem" point="org.eclipse.core.resources.markers">
		<persistent value="true">
		</persistent>
		<super type="org.eclipse.core.resources.problemmarker">
		</super>
		<super type="org.eclipse.core.resources.textmarker">
		</super>
	</extension>
	
	<extension-point id="org.emftext.language.bool.resource.bool.default_load_options" name="Default Load Options" schema="schema/default_load_options.exsd"/>
	
</plugin>
