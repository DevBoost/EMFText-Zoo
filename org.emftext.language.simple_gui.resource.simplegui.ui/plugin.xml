<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>
	<extension point="org.eclipse.ui.editors">
		<editor class="org.emftext.language.simple_gui.resource.simplegui.ui.SimpleguiEditor" contributorClass="org.eclipse.ui.texteditor.BasicTextEditorActionContributor" extensions="simplegui" icon="icons/editor_icon.gif" id="org.emftext.language.simple_gui.resource.simplegui.ui.SimpleguiEditor" name="EMFText simplegui Editor">
		</editor>
	</extension>
	
	<extension id="org.emftext.language.simple_gui.resource.simplegui.ui.problem" name="EMFText Problem" point="org.eclipse.core.resources.markers">
		<persistent value="true">
		</persistent>
		<super type="org.eclipse.core.resources.problemmarker">
		</super>
		<super type="org.eclipse.core.resources.textmarker">
		</super>
	</extension>
	
	<extension point="org.eclipse.core.runtime.preferences">
		<initializer class="org.emftext.language.simple_gui.resource.simplegui.ui.SimpleguiPreferenceInitializer">
		</initializer>
	</extension>
	
	<extension point="org.eclipse.ui.preferencePages">
		<page name="Simplegui Text Editor" id="org.emftext.language.simple_gui.resource.simplegui.ui.SimpleguiPreferencePage" class="org.emftext.language.simple_gui.resource.simplegui.ui.SimpleguiPreferencePage" category="org.eclipse.ui.preferencePages.GeneralTextEditor">
		</page>
		<page name="Syntax Coloring" id="org.emftext.language.simple_gui.resource.simplegui.ui.SimpleguiSyntaxColoringPreferencePage" class="org.emftext.language.simple_gui.resource.simplegui.ui.SimpleguiSyntaxColoringPreferencePage" category="org.emftext.language.simple_gui.resource.simplegui.ui.SimpleguiPreferencePage">
		</page>
		<page name="Brackets" id="org.emftext.language.simple_gui.resource.simplegui.ui.SimpleguiBracketPreferencePage" class="org.emftext.language.simple_gui.resource.simplegui.ui.SimpleguiBracketPreferencePage" category="org.emftext.language.simple_gui.resource.simplegui.ui.SimpleguiPreferencePage">
		</page>
		<page name="Occurrence" id="org.emftext.language.simple_gui.resource.simplegui.ui.SimpleguiOccurrencePreferencePage" class="org.emftext.language.simple_gui.resource.simplegui.ui.SimpleguiOccurrencePreferencePage" category="org.emftext.language.simple_gui.resource.simplegui.ui.SimpleguiPreferencePage">
		</page>
	</extension>
	
	<extension point="org.eclipse.ui.newWizards">
		<category id="org.emftext.runtime.ui.EMFTextFileCategory" name="EMFText File">
		</category>
		<wizard category="org.emftext.runtime.ui.EMFTextFileCategory" icon="/icons/default_new_icon.gif" class="org.emftext.language.simple_gui.resource.simplegui.ui.SimpleguiNewFileWizard" id="org.emftext.language.simple_gui.resource.simplegui.ui.SimpleguiNewFileWizard" name="EMFText .simplegui file">
		</wizard>
	</extension>
	
</plugin>
