<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>
	<extension point="org.emftext.access.syntax">
		<metaInformationProvider class="org.emftext.language.efactory.resource.efactory.mopp.EfactoryMetaInformation" id="org.emftext.language.efactory.resource.efactory.mopp.EfactoryMetaInformation">
		</metaInformationProvider>
	</extension>
	
	<extension point="org.eclipse.ui.editors">
		<editor class="org.emftext.language.efactory.resource.efactory.ui.EfactoryEditor" contributorClass="org.eclipse.ui.texteditor.BasicTextEditorActionContributor" extensions="efactory" icon="icons/editor_icon.gif" id="org.emftext.language.efactory.resource.efactory.ui.EfactoryEditor" name="EMFText efactory Editor">
		</editor>
	</extension>
	
	<extension point="org.eclipse.core.runtime.preferences">
		<initializer class="org.emftext.language.efactory.resource.efactory.ui.EfactoryPreferenceInitializer">
		</initializer>
	</extension>
	
	<extension point="org.eclipse.ui.preferencePages">
		<page name="Efactory Text Editor" id="org.emftext.language.efactory.resource.efactory.ui.EfactoryPreferencePage" class="org.emftext.language.efactory.resource.efactory.ui.EfactoryPreferencePage" category="org.eclipse.ui.preferencePages.GeneralTextEditor">
		</page>
		<page name="Syntax Coloring" id="org.emftext.language.efactory.resource.efactory.ui.EfactorySyntaxColoringPreferencePage" class="org.emftext.language.efactory.resource.efactory.ui.EfactorySyntaxColoringPreferencePage" category="org.emftext.language.efactory.resource.efactory.ui.EfactoryPreferencePage">
		</page>
		<page name="Brackets" id="org.emftext.language.efactory.resource.efactory.ui.EfactoryBracketPreferencePage" class="org.emftext.language.efactory.resource.efactory.ui.EfactoryBracketPreferencePage" category="org.emftext.language.efactory.resource.efactory.ui.EfactoryPreferencePage">
		</page>
		<page name="Occurrence" id="org.emftext.language.efactory.resource.efactory.ui.EfactoryOccurrencePreferencePage" class="org.emftext.language.efactory.resource.efactory.ui.EfactoryOccurrencePreferencePage" category="org.emftext.language.efactory.resource.efactory.ui.EfactoryPreferencePage">
		</page>
	</extension>
	
	<extension point="org.eclipse.ui.newWizards">
		<category id="org.emftext.runtime.ui.EMFTextFileCategory" name="EMFText File">
		</category>
		<wizard category="org.emftext.runtime.ui.EMFTextFileCategory" icon="/icons/default_new_icon.gif" class="org.emftext.language.efactory.resource.efactory.ui.EfactoryNewFileWizard" id="org.emftext.language.efactory.resource.efactory.ui.EfactoryNewFileWizard" name="EMFText .efactory file">
		</wizard>
	</extension>
	
	<extension id="org.emftext.language.efactory.resource.efactory.problem" name="EMFText Problem" point="org.eclipse.core.resources.markers">
		<persistent value="true">
		</persistent>
		<super type="org.eclipse.core.resources.problemmarker">
		</super>
		<super type="org.eclipse.core.resources.textmarker">
		</super>
	</extension>
	
	<extension id="org.emftext.language.efactory.resource.efactory.nature" name="efactory nature" point="org.eclipse.core.resources.natures">
		<runtime>
			<run class="org.emftext.language.efactory.resource.efactory.mopp.EfactoryNature" />
		</runtime>
		<builder id="org.emftext.language.efactory.resource.efactory.builder" />
	</extension>
	
	<extension point="org.eclipse.core.resources.builders" id="org.emftext.language.efactory.resource.efactory.builder" name="efactory Builder">
		<builder hasNature="true">
			<run class="org.emftext.language.efactory.resource.efactory.mopp.EfactoryBuilderAdapter" />
		</builder>
	</extension>
	
	<extension-point id="org.emftext.language.efactory.resource.efactory.default_load_options" name="Default Load Options" schema="schema/default_load_options.exsd"/>
	
	<extension point="org.eclipse.emf.ecore.extension_parser">
		<parser class="org.emftext.language.efactory.resource.efactory.mopp.EfactoryResourceFactoryDelegator" type="efactory">
		</parser>
	</extension>
	
	<extension-point id="org.emftext.language.efactory.resource.efactory.additional_extension_parser" name="Additional Extension Parser" schema="schema/additional_extension_parser.exsd"/>
	
</plugin>
