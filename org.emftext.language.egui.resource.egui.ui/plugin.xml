<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>
	<extension point="org.emftext.access.syntax.ui">
		<metaInformationProvider class="org.emftext.language.egui.resource.egui.ui.EguiUIMetaInformation" id="org.emftext.language.egui.resource.egui.ui.EguiUIMetaInformation">
		</metaInformationProvider>
	</extension>
	
	<extension point="org.eclipse.ui.editors">
		<editor class="org.emftext.language.egui.resource.egui.ui.EguiEditor" contributorClass="org.eclipse.ui.texteditor.BasicTextEditorActionContributor" extensions="egui" icon="icons/editor_icon.gif" id="org.emftext.language.egui.resource.egui.ui.EguiEditor" name="EMFText egui Editor">
			<contentTypeBinding contentTypeId="org.emftext.language.egui.resource.egui"/>
		</editor>
	</extension>
	
	<extension point="org.eclipse.core.runtime.preferences">
		<initializer class="org.emftext.language.egui.resource.egui.ui.EguiPreferenceInitializer">
		</initializer>
	</extension>
	
	<extension point="org.eclipse.ui.preferencePages">
		<page name="Egui Text Editor" id="org.emftext.language.egui.resource.egui.ui.EguiPreferencePage" class="org.emftext.language.egui.resource.egui.ui.EguiPreferencePage" category="org.eclipse.ui.preferencePages.GeneralTextEditor">
		</page>
		<page name="Syntax Coloring" id="org.emftext.language.egui.resource.egui.ui.EguiSyntaxColoringPreferencePage" class="org.emftext.language.egui.resource.egui.ui.EguiSyntaxColoringPreferencePage" category="org.emftext.language.egui.resource.egui.ui.EguiPreferencePage">
		</page>
		<page name="Brackets" id="org.emftext.language.egui.resource.egui.ui.EguiBracketPreferencePage" class="org.emftext.language.egui.resource.egui.ui.EguiBracketPreferencePage" category="org.emftext.language.egui.resource.egui.ui.EguiPreferencePage">
		</page>
	</extension>
	
	<extension point="org.eclipse.ui.newWizards">
		<category id="org.emftext.runtime.ui.EMFTextFileCategory" name="EMFText File">
		</category>
		<wizard category="org.emftext.runtime.ui.EMFTextFileCategory" icon="/icons/default_new_icon.gif" class="org.emftext.language.egui.resource.egui.ui.EguiNewFileWizard" id="org.emftext.language.egui.resource.egui.ui.EguiNewFileWizard" name="EMFText .egui file">
		</wizard>
	</extension>
	
	<extension point="org.eclipse.ui.ide.markerResolution">
		<markerResolutionGenerator class="org.emftext.language.egui.resource.egui.ui.EguiMarkerResolutionGenerator" markerType="org.emftext.language.egui.resource.egui.problem" />
	</extension>
	
	<extension point="org.eclipse.core.filebuffers.annotationModelCreation">
		<factory class="org.emftext.language.egui.resource.egui.ui.EguiAnnotationModelFactory" extensions="egui" />
	</extension>
	
	<extension point="org.eclipse.core.contenttype.contentTypes">
		<content-type id="org.emftext.language.egui.resource.egui" name=".egui File" base-type="org.eclipse.core.runtime.text" file-extensions="egui"/>
	</extension>
	
	<extension point="org.eclipse.ui.editors.documentProviders">
		<provider class="org.eclipse.ui.editors.text.TextFileDocumentProvider" extensions="egui" id="org.emftext.language.egui.resource.egui.ui.provider" />
	</extension>
	
	<extension point="org.eclipse.ui.editors.annotationTypes">
		<type name="org.emftext.language.egui.resource.egui.ui.occurences" />
		<type name="org.emftext.language.egui.resource.egui.ui.occurences.declaration" super="org.emftext.language.egui.resource.egui.ui.occurences" />
	</extension>
	
	<extension point="org.eclipse.ui.editors.markerAnnotationSpecification">
		<specification annotationType="org.emftext.language.egui.resource.egui.ui.occurences" label="Occurrences (in .egui files)" icon="/icons/occurrence_icon.gif" textPreferenceKey="egui.occurrenceIndication" textPreferenceValue="false" highlightPreferenceKey="egui.occurrenceHighlighting" highlightPreferenceValue="true" contributesToHeader="false" overviewRulerPreferenceKey="egui.occurrenceIndicationInOverviewRuler" overviewRulerPreferenceValue="true" verticalRulerPreferenceKey="egui.occurrenceIndicationInVerticalRuler" verticalRulerPreferenceValue="false" colorPreferenceKey="egui.occurrenceIndicationColor" colorPreferenceValue="212,212,212" presentationLayer="4" showInNextPrevDropdownToolbarActionKey="egui.showOccurrenceInNextPrevDropdownToolbarAction" showInNextPrevDropdownToolbarAction="true" isGoToNextNavigationTargetKey="egui.isOccurrenceGoToNextNavigationTarget" isGoToNextNavigationTarget="false" isGoToPreviousNavigationTargetKey="egui.isOccurrenceGoToPreviousNavigationTarget" isGoToPreviousNavigationTarget="false" textStylePreferenceKey="egui.occurrenceTextStyle" textStylePreferenceValue="NONE" />
		<specification annotationType="org.emftext.language.egui.resource.egui.ui.occurences.declaration" label="Declarations (in .egui files)" textPreferenceKey="egui.declarationIndication" textPreferenceValue="false" highlightPreferenceKey="egui.declarationHighlighting" highlightPreferenceValue="true" overviewRulerPreferenceKey="egui.declarationIndicationInOverviewRuler" overviewRulerPreferenceValue="true" verticalRulerPreferenceKey="egui.declarationIndicationInVerticalRuler" verticalRulerPreferenceValue="false" colorPreferenceKey="egui.declarationIndicationColor" colorPreferenceValue="240,216,168" presentationLayer="4" textStylePreferenceKey="egui.declarationTextStyle" textStylePreferenceValue="NONE" />
	</extension>
	
</plugin>
