			</contentTypeBinding>
		</editor>
	</extension>
	
	<extension point="org.eclipse.core.runtime.preferences">
		<initializer class="org.emftext.language.hedl.resource.hedl.ui.HedlPreferenceInitializer">
		</initializer>
	</extension>
	
	<extension point="org.eclipse.ui.preferencePages">
		<page name="Hedl Text Editor" id="org.emftext.language.hedl.resource.hedl.ui.HedlPreferencePage" class="org.emftext.language.hedl.resource.hedl.ui.HedlPreferencePage" category="org.eclipse.ui.preferencePages.GeneralTextEditor">
		</page>
		<page name="Syntax Coloring" id="org.emftext.language.hedl.resource.hedl.ui.HedlSyntaxColoringPreferencePage" class="org.emftext.language.hedl.resource.hedl.ui.HedlSyntaxColoringPreferencePage" category="org.emftext.language.hedl.resource.hedl.ui.HedlPreferencePage">
		</page>
		<page name="Brackets" id="org.emftext.language.hedl.resource.hedl.ui.HedlBracketPreferencePage" class="org.emftext.language.hedl.resource.hedl.ui.HedlBracketPreferencePage" category="org.emftext.language.hedl.resource.hedl.ui.HedlPreferencePage">
		</page>
	</extension>
	
	<extension point="org.eclipse.ui.newWizards">
		<category id="org.emftext.runtime.ui.EMFTextFileCategory" name="EMFText File">
		</category>
		<wizard category="org.emftext.runtime.ui.EMFTextFileCategory" icon="/icons/default_new_icon.gif" class="org.emftext.language.hedl.resource.hedl.ui.HedlNewFileWizard" id="org.emftext.language.hedl.resource.hedl.ui.HedlNewFileWizard" name="EMFText .hedl file">
		</wizard>
		<category id="org.emftext.runtime.ui.EMFTextProjectCategory" name="EMFText Project">
		</category>
		<wizard category="org.emftext.runtime.ui.EMFTextProjectCategory" icon="/icons/default_new_icon.gif" class="org.emftext.language.hedl.resource.hedl.ui.HedlNewProjectWizard" id="org.emftext.language.hedl.resource.hedl.ui.HedlNewProjectWizard" name="EMFText hedl project" project="true">
		</wizard>
	</extension>
	
	<extension point="org.eclipse.ui.ide.markerResolution">
		<markerResolutionGenerator class="org.emftext.language.hedl.resource.hedl.ui.HedlMarkerResolutionGenerator" markerType="org.emftext.language.hedl.resource.hedl.problem">
		</markerResolutionGenerator>
	</extension>
	
	<extension point="org.eclipse.core.filebuffers.annotationModelCreation">
		<factory class="org.emftext.language.hedl.resource.hedl.ui.HedlAnnotationModelFactory" extensions="hedl">
		</factory>
	</extension>
	
	<extension point="org.eclipse.core.contenttype.contentTypes">
		<content-type id="org.emftext.language.hedl.resource.hedl" name=".hedl File" base-type="org.eclipse.core.runtime.text" file-extensions="hedl">
		</content-type>
	</extension>
	
	<extension point="org.eclipse.ui.editors.documentProviders">
		<provider class="org.eclipse.ui.editors.text.TextFileDocumentProvider" extensions="hedl" id="org.emftext.language.hedl.resource.hedl.ui.provider">
		</provider>
	</extension>
	
	<extension point="org.eclipse.ui.editors.annotationTypes">
		<type name="org.emftext.language.hedl.resource.hedl.ui.occurences">
		</type>
		<type name="org.emftext.language.hedl.resource.hedl.ui.occurences.declaration" super="org.emftext.language.hedl.resource.hedl.ui.occurences">
		</type>
	</extension>
	
	<extension point="org.eclipse.ui.editors.markerAnnotationSpecification">
		<specification annotationType="org.emftext.language.hedl.resource.hedl.ui.occurences" label="Occurrences (in .hedl files)" icon="/icons/occurrence_icon.gif" textPreferenceKey="hedl.occurrenceIndication" textPreferenceValue="false" highlightPreferenceKey="hedl.occurrenceHighlighting" highlightPreferenceValue="true" contributesToHeader="false" overviewRulerPreferenceKey="hedl.occurrenceIndicationInOverviewRuler" overviewRulerPreferenceValue="true" verticalRulerPreferenceKey="hedl.occurrenceIndicationInVerticalRuler" verticalRulerPreferenceValue="false" colorPreferenceKey="hedl.occurrenceIndicationColor" colorPreferenceValue="212,212,212" presentationLayer="4" showInNextPrevDropdownToolbarActionKey="hedl.showOccurrenceInNextPrevDropdownToolbarAction" showInNextPrevDropdownToolbarAction="true" isGoToNextNavigationTargetKey="hedl.isOccurrenceGoToNextNavigationTarget" isGoToNextNavigationTarget="false" isGoToPreviousNavigationTargetKey="hedl.isOccurrenceGoToPreviousNavigationTarget" isGoToPreviousNavigationTarget="false" textStylePreferenceKey="hedl.occurrenceTextStyle" textStylePreferenceValue="NONE">
		</specification>
		<specification annotationType="org.emftext.language.hedl.resource.hedl.ui.occurences.declaration" label="Declarations (in .hedl files)" textPreferenceKey="hedl.declarationIndication" textPreferenceValue="false" highlightPreferenceKey="hedl.declarationHighlighting" highlightPreferenceValue="true" overviewRulerPreferenceKey="hedl.declarationIndicationInOverviewRuler" overviewRulerPreferenceValue="true" verticalRulerPreferenceKey="hedl.declarationIndicationInVerticalRuler" verticalRulerPreferenceValue="false" colorPreferenceKey="hedl.declarationIndicationColor" colorPreferenceValue="240,216,168" presentationLayer="4" textStylePreferenceKey="hedl.declarationTextStyle" textStylePreferenceValue="NONE">
		</specification>
	</extension>
	
	<extension point="org.eclipse.ui.editors.annotationTypes">
		<type name="org.emftext.language.hedl.resource.hedl.ui.debug.lineBreakpoint" markerType="org.emftext.language.hedl.resource.hedl.debug.lineBreakpoint.marker" super="org.eclipse.debug.core.breakpoint">
		</type>
	</extension>
	
	<extension point="org.eclipse.ui.editors.markerAnnotationSpecification">
		<specification annotationType="org.emftext.language.hedl.resource.hedl.ui.debug.lineBreakpoint" label="Breakpoints (in .hedl files)" icon="/icons/breakpoint_icon.gif" textPreferenceKey="org.emftext.language.hedl.resource.hedl.ui.lineBreakpoint" textPreferenceValue="false" highlightPreferenceKey="org.emftext.language.hedl.resource.hedl.ui.lineBreakpointHighlighting" highlightPreferenceValue="true" contributesToHeader="false" overviewRulerPreferenceKey="org.emftext.language.hedl.resource.hedl.ui.lineBreakpointIndicationInOverviewRuler" overviewRulerPreferenceValue="true" verticalRulerPreferenceKey="org.emftext.language.hedl.resource.hedl.ui.lineBreakpointIndicationInVerticalRuler" verticalRulerPreferenceValue="false" colorPreferenceKey="org.emftext.language.hedl.resource.hedl.ui.lineBreakpointColor" colorPreferenceValue="212,212,212" presentationLayer="4" showInNextPrevDropdownToolbarActionKey="org.emftext.language.hedl.resource.hedl.ui.showLineBreakpointInNextPrevDropdownToolbarAction" showInNextPrevDropdownToolbarAction="true" isGoToNextNavigationTargetKey="org.emftext.language.hedl.resource.hedl.ui.isLineBreakpointGoToNextNavigationTarget" isGoToNextNavigationTarget="false" isGoToPreviousNavigationTargetKey="org.emftext.language.hedl.resource.hedl.ui.isLineBreakpointGoToPreviousNavigationTarget" isGoToPreviousNavigationTarget="false" textStylePreferenceKey="org.emftext.language.hedl.resource.hedl.ui.lineBreakpointTextStyle" textStylePreferenceValue="NONE">
		</specification>
	</extension>
	
	<extension point="org.eclipse.core.runtime.adapters">
		<factory adaptableType="org.emftext.language.hedl.resource.hedl.ui.HedlEditor" class="org.emftext.language.hedl.resource.hedl.ui.debug.HedlAdapterFactory">
			<adapter type="org.eclipse.debug.ui.actions.IToggleBreakpointsTarget">
			</adapter>
		</factory>
		<factory adaptableType="org.emftext.language.hedl.resource.hedl.debug.HedlDebugVariable" class="org.emftext.language.hedl.resource.hedl.ui.debug.HedlAdapterFactory">
			<adapter type="org.eclipse.debug.internal.ui.viewers.model.provisional.IElementLabelProvider">
			</adapter>
		</factory>
		<factory adaptableType="org.emftext.language.hedl.resource.hedl.debug.HedlDebugVariable" class="org.emftext.language.hedl.resource.hedl.ui.debug.HedlAdapterFactory">
			<adapter type="org.eclipse.debug.internal.ui.viewers.model.provisional.IElementContentProvider">
			</adapter>
		</factory>
	</extension>
	
	<extension point="org.eclipse.ui.popupMenus">
		<viewerContribution id="org.emftext.language.hedl.resource.hedl.ui.RulerPopupActions" targetID="org.emftext.language.hedl.resource.hedl.EditorRuler">
			<action id="org.emftext.language.hedl.resource.hedl.ui.toggleBreakpointAction" icon="icons/breakpoint_icon.gif" label="Toggle Breakpoint" class="org.eclipse.debug.ui.actions.RulerToggleBreakpointActionDelegate" menubarPath="debug">
			</action>
		</viewerContribution>
	</extension>
	
	<extension point="org.eclipse.ui.editorActions">
		<editorContribution targetID="org.emftext.language.hedl.resource.hedl.ui.HedlEditor" id="org.emftext.language.hedl.resource.hedl.ui.BreakpointRulerActions">
			<action id="org.emftext.language.hedl.resource.hedl.ui.debug.RulerToggleBreakpointAction" label="Add breakpoint" class="org.eclipse.debug.ui.actions.RulerToggleBreakpointActionDelegate" actionID="RulerDoubleClick">
			</action>
		</editorContribution>
	</extension>
	
	<extension point="org.eclipse.debug.ui.debugModelPresentations">
		<debugModelPresentation id="org.emftext.language.hedl.resource.hedl.debugModel" class="org.emftext.language.hedl.resource.hedl.ui.debug.HedlDebugModelPresentation">
		</debugModelPresentation>
	</extension>
	
</plugin>
