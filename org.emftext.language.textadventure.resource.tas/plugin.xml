<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>
	<extension point="org.eclipse.emf.ecore.extension_parser">
		<parser class="org.emftext.language.textadventure.resource.tas.mopp.TasResourceFactory" type="tas">
		</parser>
	</extension>
	
	<extension point="org.emftext.access.syntax">
		<metaInformationProvider class="org.emftext.language.textadventure.resource.tas.mopp.TasMetaInformation" id="org.emftext.language.textadventure.resource.tas.mopp.TasMetaInformation">
		</metaInformationProvider>
	</extension>
	
	<extension point="org.eclipse.ui.editors">
		<editor class="org.emftext.language.textadventure.resource.tas.ui.TasEditor" contributorClass="org.eclipse.ui.texteditor.BasicTextEditorActionContributor" extensions="tas" icon="icons/editor_icon.gif" id="org.emftext.language.textadventure.resource.tas.ui.TasEditor" name="EMFText tas Editor">
		</editor>
	</extension>
	
	<extension point="org.eclipse.core.runtime.preferences">
		<initializer class="org.emftext.language.textadventure.resource.tas.ui.TasPreferenceInitializer">
		</initializer>
	</extension>
	
	<extension point="org.eclipse.ui.newWizards">
		<category id="org.emftext.runtime.ui.EMFTextFileCategory" name="EMFText File">
		</category>
		<wizard category="org.emftext.runtime.ui.EMFTextFileCategory" icon="/icons/default_new_icon.gif" class="org.emftext.language.textadventure.resource.tas.ui.TasNewFileWizard" id="org.emftext.language.textadventure.resource.tas.ui.TasNewFileWizard" name="EMFText .tas file">
		</wizard>
	</extension>
	
	<extension id="org.emftext.language.textadventure.resource.tas.problem" name="EMFText Problem" point="org.eclipse.core.resources.markers">
		<persistent value="true">
		</persistent>
		<super type="org.eclipse.core.resources.problemmarker">
		</super>
		<super type="org.eclipse.core.resources.textmarker">
		</super>
	</extension>
	
	<extension-point id="org.emftext.language.textadventure.resource.tas.default_load_options" name="Default Load Options" schema="schema/default_load_options.exsd"/>
	
</plugin>
