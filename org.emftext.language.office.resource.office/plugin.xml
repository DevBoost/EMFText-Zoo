<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>
	<extension point="org.emftext.access.syntax">
		<metaInformationProvider class="org.emftext.language.office.resource.office.mopp.OfficeMetaInformation" id="org.emftext.language.office.resource.office.mopp.OfficeMetaInformation">
		</metaInformationProvider>
	</extension>
	
	<extension point="org.eclipse.ui.editors">
		<editor class="org.emftext.language.office.resource.office.ui.OfficeEditor" contributorClass="org.eclipse.ui.texteditor.BasicTextEditorActionContributor" extensions="office" icon="icons/editor_icon.gif" id="org.emftext.language.office.resource.office.ui.OfficeEditor" name="EMFText office Editor">
		</editor>
	</extension>
	
	<extension point="org.eclipse.core.runtime.preferences">
		<initializer class="org.emftext.language.office.resource.office.ui.OfficePreferenceInitializer">
		</initializer>
	</extension>
	
	<extension point="org.eclipse.ui.preferencePages">
		<page name="Office Text Editor" id="org.emftext.language.office.resource.office.ui.OfficePreferencePage" class="org.emftext.language.office.resource.office.ui.OfficePreferencePage" category="org.eclipse.ui.preferencePages.GeneralTextEditor">
		</page>
		<page name="Syntax Coloring" id="org.emftext.language.office.resource.office.ui.OfficeSyntaxColoringPreferencePage" class="org.emftext.language.office.resource.office.ui.OfficeSyntaxColoringPreferencePage" category="org.emftext.language.office.resource.office.ui.OfficePreferencePage">
		</page>
		<page name="Brackets" id="org.emftext.language.office.resource.office.ui.OfficeBracketPreferencePage" class="org.emftext.language.office.resource.office.ui.OfficeBracketPreferencePage" category="org.emftext.language.office.resource.office.ui.OfficePreferencePage">
		</page>
		<page name="Occurrence" id="org.emftext.language.office.resource.office.ui.OfficeOccurrencePreferencePage" class="org.emftext.language.office.resource.office.ui.OfficeOccurrencePreferencePage" category="org.emftext.language.office.resource.office.ui.OfficePreferencePage">
		</page>
	</extension>
	
	<extension point="org.eclipse.ui.newWizards">
		<category id="org.emftext.runtime.ui.EMFTextFileCategory" name="EMFText File">
		</category>
		<wizard category="org.emftext.runtime.ui.EMFTextFileCategory" icon="/icons/default_new_icon.gif" class="org.emftext.language.office.resource.office.ui.OfficeNewFileWizard" id="org.emftext.language.office.resource.office.ui.OfficeNewFileWizard" name="EMFText .office file">
		</wizard>
	</extension>
	
	<extension id="org.emftext.language.office.resource.office.problem" name="EMFText Problem" point="org.eclipse.core.resources.markers">
		<persistent value="true">
		</persistent>
		<super type="org.eclipse.core.resources.problemmarker">
		</super>
		<super type="org.eclipse.core.resources.textmarker">
		</super>
	</extension>
	
	<extension id="org.emftext.language.office.resource.office.nature" name="office nature" point="org.eclipse.core.resources.natures">
		<runtime>
			<run class="org.emftext.language.office.resource.office.mopp.OfficeNature" />
		</runtime>
		<builder id="org.emftext.language.office.resource.office.builder" />
	</extension>
	
	<extension point="org.eclipse.core.resources.builders" id="org.emftext.language.office.resource.office.builder" name="office Builder">
		<builder hasNature="true">
			<run class="org.emftext.language.office.resource.office.mopp.OfficeBuilderAdapter" />
		</builder>
	</extension>
	
	<extension-point id="org.emftext.language.office.resource.office.default_load_options" name="Default Load Options" schema="schema/default_load_options.exsd"/>
	
	<extension point="org.eclipse.emf.ecore.extension_parser">
		<parser class="org.emftext.language.office.resource.office.mopp.OfficeResourceFactoryDelegator" type="office">
		</parser>
	</extension>
	
	<extension-point id="org.emftext.language.office.resource.office.additional_extension_parser" name="Additional Extension Parser" schema="schema/additional_extension_parser.exsd"/>
	
</plugin>
