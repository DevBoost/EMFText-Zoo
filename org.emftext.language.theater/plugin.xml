<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>
	<extension point="org.emftext.access.syntax">
		<metaInformationProvider class="org.emftext.acting.resource.acting.mopp.ActingMetaInformation" id="org.emftext.acting.resource.acting.mopp.ActingMetaInformation">
		</metaInformationProvider>
	</extension>
	
	<extension point="org.eclipse.ui.editors">
		<editor class="org.emftext.acting.resource.acting.ui.ActingEditor" contributorClass="org.eclipse.ui.texteditor.BasicTextEditorActionContributor" extensions="acting" icon="icons/editor_icon.gif" id="org.emftext.acting.resource.acting.ui.ActingEditor" name="EMFText acting Editor">
		</editor>
	</extension>
	
	<extension point="org.eclipse.core.runtime.preferences">
		<initializer class="org.emftext.acting.resource.acting.ui.ActingPreferenceInitializer">
		</initializer>
	</extension>
	
	<extension point="org.eclipse.ui.preferencePages">
		<page name="Acting Text Editor" id="org.emftext.acting.resource.acting.ui.ActingPreferencePage" class="org.emftext.acting.resource.acting.ui.ActingPreferencePage" category="org.eclipse.ui.preferencePages.GeneralTextEditor">
		</page>
		<page name="Syntax Coloring" id="org.emftext.acting.resource.acting.ui.ActingSyntaxColoringPreferencePage" class="org.emftext.acting.resource.acting.ui.ActingSyntaxColoringPreferencePage" category="org.emftext.acting.resource.acting.ui.ActingPreferencePage">
		</page>
		<page name="Brackets" id="org.emftext.acting.resource.acting.ui.ActingBracketPreferencePage" class="org.emftext.acting.resource.acting.ui.ActingBracketPreferencePage" category="org.emftext.acting.resource.acting.ui.ActingPreferencePage">
		</page>
		<page name="Occurrence" id="org.emftext.acting.resource.acting.ui.ActingOccurrencePreferencePage" class="org.emftext.acting.resource.acting.ui.ActingOccurrencePreferencePage" category="org.emftext.acting.resource.acting.ui.ActingPreferencePage">
		</page>
	</extension>
	
	<extension point="org.eclipse.ui.newWizards">
		<category id="org.emftext.runtime.ui.EMFTextFileCategory" name="EMFText File">
		</category>
		<wizard category="org.emftext.runtime.ui.EMFTextFileCategory" icon="/icons/default_new_icon.gif" class="org.emftext.acting.resource.acting.ui.ActingNewFileWizard" id="org.emftext.acting.resource.acting.ui.ActingNewFileWizard" name="EMFText .acting file">
		</wizard>
	</extension>
	
	<extension id="org.emftext.acting.problem" name="EMFText Problem" point="org.eclipse.core.resources.markers">
		<persistent value="true">
		</persistent>
		<super type="org.eclipse.core.resources.problemmarker">
		</super>
		<super type="org.eclipse.core.resources.textmarker">
		</super>
	</extension>
	
	<extension id="org.emftext.acting.nature" name="acting nature" point="org.eclipse.core.resources.natures">
		<runtime>
			<run class="org.emftext.acting.resource.acting.mopp.ActingNature" />
		</runtime>
		<builder id="org.emftext.acting.builder" />
	</extension>
	
	<extension point="org.eclipse.core.resources.builders" id="org.emftext.acting.builder" name="acting Builder">
		<builder hasNature="true">
			<run class="org.emftext.acting.resource.acting.mopp.ActingBuilderAdapter" />
		</builder>
	</extension>
	
	<extension-point id="org.emftext.acting.default_load_options" name="Default Load Options" schema="schema/default_load_options.exsd"/>
	
	<extension point="org.eclipse.emf.ecore.extension_parser">
		<parser class="org.emftext.acting.resource.acting.mopp.ActingResourceFactoryDelegator" type="acting">
		</parser>
	</extension>
	
	<extension-point id="org.emftext.acting.additional_extension_parser" name="Additional Extension Parser" schema="schema/additional_extension_parser.exsd"/>
	
</plugin>
