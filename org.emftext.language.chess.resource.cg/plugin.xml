<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>
	<extension point="org.eclipse.emf.ecore.extension_parser">
		<parser class="org.emftext.language.chess.resource.cg.mopp.CgResourceFactory" type="cg">
		</parser>
	</extension>
	
	<extension point="org.emftext.access.syntax">
		<metaInformationProvider class="org.emftext.language.chess.resource.cg.mopp.CgMetaInformation" id="org.emftext.language.chess.resource.cg.mopp.CgMetaInformation">
		</metaInformationProvider>
	</extension>
	
	<extension point="org.eclipse.core.contenttype.contentTypes">
		<content-type id="org.emftext.filetype.cg" name="EMFText cg Files">
		</content-type>
		<file-association content-type="org.emftext.filetype.cg" file-extensions="cg">
		</file-association>
	</extension>
	
	<extension point="org.eclipse.ui.editors">
		<editor class="org.emftext.language.chess.resource.cg.ui.CgEditor" contributorClass="org.eclipse.ui.texteditor.BasicTextEditorActionContributor" icon="icons/editor_icon.gif" id="org.emftext.language.chess.resource.cg.ui.CgEditor" name="EMFText cg Editor">
			<contentTypeBinding contentTypeId="org.eclipse.core.runtime.text">
			</contentTypeBinding>
			<contentTypeBinding contentTypeId="org.emftext.filetype.cg" >
			</contentTypeBinding>
		</editor>
	</extension>
	
	<extension point="org.eclipse.core.runtime.preferences">
		<initializer class="org.emftext.language.chess.resource.cg.ui.CgPreferenceInitializer">
		</initializer>
	</extension>
	
	<extension point="org.eclipse.ui.newWizards">
		<category id="org.emftext.runtime.ui.EMFTextFileCategory" name="EMFText File">
		</category>
		<wizard category="org.emftext.runtime.ui.EMFTextFileCategory" icon="/icons/default_new_icon.gif" class="org.emftext.language.chess.resource.cg.ui.CgNewFileWizard" id="org.emftext.language.chess.resource.cg.ui.CgNewFileWizard" name="EMFText .cg file">
		</wizard>
	</extension>
	
	<extension id="org.emftext.language.chess.resource.cg.problem" name="EMFText Problem" point="org.eclipse.core.resources.markers">
		<persistent value="true">
		</persistent>
		<super type="org.eclipse.core.resources.problemmarker">
		</super>
		<super type="org.eclipse.core.resources.textmarker">
		</super>
	</extension>
	
	<extension-point id="org.emftext.language.chess.resource.cg.default_load_options" name="Default Load Options" schema="schema/default_load_options.exsd"/>
	
</plugin>
