			<run class="org.emftext.language.ecore.resource.mecore.mopp.MinEcoreBuilderAdapter" />
		</builder>
	</extension>
	
	<extension-point id="org.emftext.language.ecore.resource.mecore.default_load_options" name="Default Load Options" schema="schema/default_load_options.exsd"/>
	
	<extension point="org.emftext.language.ecore.resource.additional_extension_parser">
		<parser class="org.emftext.language.ecore.resource.mecore.mopp.MinEcoreResourceFactory" type="min">
