<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>
	<extension point="org.emftext.access.syntax">
		<metaInformationProvider class="org.emftext.language.ecoredoc.resource.ecoredoc.mopp.EcoredocMetaInformation" id="org.emftext.language.ecoredoc.resource.ecoredoc.mopp.EcoredocMetaInformation">
		</metaInformationProvider>
	</extension>
	
	<extension id="org.emftext.language.ecoredoc.resource.ecoredoc.problem" name="EMFText Problem" point="org.eclipse.core.resources.markers">
		<persistent value="true">
		</persistent>
		<super type="org.eclipse.core.resources.problemmarker">
		</super>
		<super type="org.eclipse.core.resources.textmarker">
		</super>
	</extension>
	
	<extension id="org.emftext.language.ecoredoc.resource.ecoredoc.nature" name="ecoredoc nature" point="org.eclipse.core.resources.natures">
		<runtime>
			<run class="org.emftext.language.ecoredoc.resource.ecoredoc.mopp.EcoredocNature" />
		</runtime>
		<builder id="org.emftext.language.ecoredoc.resource.ecoredoc.builder" />
	</extension>
	
	<extension point="org.eclipse.core.resources.builders" id="org.emftext.language.ecoredoc.resource.ecoredoc.builder" name="ecoredoc Builder">
		<builder hasNature="true">
			<run class="org.emftext.language.ecoredoc.resource.ecoredoc.mopp.EcoredocBuilderAdapter" />
		</builder>
	</extension>
	
	<extension-point id="org.emftext.language.ecoredoc.resource.ecoredoc.default_load_options" name="Default Load Options" schema="schema/default_load_options.exsd"/>
	
	<extension point="org.eclipse.emf.ecore.extension_parser">
		<parser class="org.emftext.language.ecoredoc.resource.ecoredoc.mopp.EcoredocResourceFactoryDelegator" type="ecoredoc">
		</parser>
	</extension>
	
	<extension-point id="org.emftext.language.ecoredoc.resource.ecoredoc.additional_extension_parser" name="Additional Extension Parser" schema="schema/additional_extension_parser.exsd"/>
	
</plugin>
