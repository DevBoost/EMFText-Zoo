<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>
	<extension point="org.emftext.access.syntax">
		<metaInformationProvider class="org.emftext.language.java.closures.resource.closure.mopp.ClosureMetaInformation" id="org.emftext.language.java.closures.resource.closure.mopp.ClosureMetaInformation">
		</metaInformationProvider>
	</extension>
	
	<extension point="org.eclipse.ui.editors">
		<editor class="org.emftext.language.java.closures.resource.closure.ui.ClosureEditor" contributorClass="org.eclipse.ui.texteditor.BasicTextEditorActionContributor" extensions="closure" icon="icons/editor_icon.gif" id="org.emftext.language.java.closures.resource.closure.ui.ClosureEditor" name="EMFText closure Editor">
		</editor>
	</extension>
	
	<extension point="org.eclipse.core.runtime.preferences">
		<initializer class="org.emftext.language.java.closures.resource.closure.ui.ClosurePreferenceInitializer">
		</initializer>
	</extension>
	
	<extension point="org.eclipse.ui.preferencePages">
		<page name="Closure Text Editor" id="org.emftext.language.java.closures.resource.closure.ui.ClosurePreferencePage" class="org.emftext.language.java.closures.resource.closure.ui.ClosurePreferencePage" category="org.eclipse.ui.preferencePages.GeneralTextEditor">
		</page>
		<page name="Syntax Coloring" id="org.emftext.language.java.closures.resource.closure.ui.ClosureSyntaxColoringPreferencePage" class="org.emftext.language.java.closures.resource.closure.ui.ClosureSyntaxColoringPreferencePage" category="org.emftext.language.java.closures.resource.closure.ui.ClosurePreferencePage">
		</page>
		<page name="Brackets" id="org.emftext.language.java.closures.resource.closure.ui.ClosureBracketPreferencePage" class="org.emftext.language.java.closures.resource.closure.ui.ClosureBracketPreferencePage" category="org.emftext.language.java.closures.resource.closure.ui.ClosurePreferencePage">
		</page>
		<page name="Occurrence" id="org.emftext.language.java.closures.resource.closure.ui.ClosureOccurrencePreferencePage" class="org.emftext.language.java.closures.resource.closure.ui.ClosureOccurrencePreferencePage" category="org.emftext.language.java.closures.resource.closure.ui.ClosurePreferencePage">
		</page>
	</extension>
	
	<extension point="org.eclipse.ui.newWizards">
		<category id="org.emftext.runtime.ui.EMFTextFileCategory" name="EMFText File">
		</category>
		<wizard category="org.emftext.runtime.ui.EMFTextFileCategory" icon="/icons/default_new_icon.gif" class="org.emftext.language.java.closures.resource.closure.ui.ClosureNewFileWizard" id="org.emftext.language.java.closures.resource.closure.ui.ClosureNewFileWizard" name="EMFText .closure file">
		</wizard>
	</extension>
	
	<extension id="org.emftext.language.java.closures.resource.closure.problem" name="EMFText Problem" point="org.eclipse.core.resources.markers">
		<persistent value="true">
		</persistent>
		<super type="org.eclipse.core.resources.problemmarker">
		</super>
		<super type="org.eclipse.core.resources.textmarker">
		</super>
	</extension>
	
	<extension id="org.emftext.language.java.closures.resource.closure.nature" name="closure nature" point="org.eclipse.core.resources.natures">
		<runtime>
			<run class="org.emftext.language.java.closures.resource.closure.mopp.ClosureNature" />
		</runtime>
		<builder id="org.emftext.language.java.closures.resource.closure.builder" />
	</extension>
	
	<extension point="org.eclipse.core.resources.builders" id="org.emftext.language.java.closures.resource.closure.builder" name="closure Builder">
		<builder hasNature="true">
			<run class="org.emftext.language.java.closures.resource.closure.mopp.ClosureBuilderAdapter" />
		</builder>
	</extension>
	
	<extension-point id="org.emftext.language.java.closures.resource.closure.default_load_options" name="Default Load Options" schema="schema/default_load_options.exsd"/>
	
	<extension point="org.eclipse.emf.ecore.extension_parser">
		<parser class="org.emftext.language.java.closures.resource.closure.mopp.ClosureResourceFactoryDelegator" type="closure">
		</parser>
	</extension>
	
	<extension-point id="org.emftext.language.java.closures.resource.closure.additional_extension_parser" name="Additional Extension Parser" schema="schema/additional_extension_parser.exsd"/>
	
</plugin>
