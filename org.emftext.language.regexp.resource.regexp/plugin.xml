<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>
	<extension point="org.eclipse.emf.ecore.extension_parser">
		<parser class="org.emftext.language.regexp.resource.regexp.mopp.RegexpResourceFactory" type="regexp">
		</parser>
	</extension>
	
	<extension point="org.emftext.access.syntax">
		<metaInformationProvider class="org.emftext.language.regexp.resource.regexp.mopp.RegexpTextResourcePluginMetaInformation" id="org.emftext.language.regexp.resource.regexp.mopp.RegexpTextResourcePluginMetaInformation">
		</metaInformationProvider>
	</extension>
	
	<extension point="org.eclipse.core.contenttype.contentTypes">
		<content-type id="org.emftext.filetype.regexp" name="EMFText regexp Files">
		</content-type>
		<file-association content-type="org.emftext.filetype.regexp" file-extensions="regexp">
		</file-association>
	</extension>
	
	<extension point="org.eclipse.ui.editors">
		<editor class="org.emftext.language.regexp.resource.regexp.ui.RegexpEditor" contributorClass="org.eclipse.ui.texteditor.BasicTextEditorActionContributor" icon="icons/editor_icon.gif" id="org.emftext.language.regexp.resource.regexp.ui.RegexpEditor" name="EMFText regexp Editor">
			<contentTypeBinding contentTypeId="org.eclipse.core.runtime.text">
			</contentTypeBinding>
			<contentTypeBinding contentTypeId="org.emftext.filetype.regexp" >
			</contentTypeBinding>
		</editor>
	</extension>
	
	<extension point="org.eclipse.core.runtime.preferences">
		<initializer class="org.emftext.language.regexp.resource.regexp.ui.RegexpPreferenceInitializer">
		</initializer>
	</extension>
	
	<extension point="org.eclipse.ui.newWizards">
		<category id="org.emftext.runtime.ui.EMFTextFileCategory" name="EMFText File">
		</category>
		<wizard category="org.emftext.runtime.ui.EMFTextFileCategory" icon="/icons/default_new_icon.gif" class="org.emftext.language.regexp.resource.regexp.ui.RegexpNewFileWizard" id="org.emftext.language.regexp.resource.regexp.ui.RegexpNewFileWizard" name="EMFText .regexp file">
		</wizard>
	</extension>
	
	<extension-point id="org.emftext.language.regexp.resource.regexp.default_load_options" name="Default Load Options" schema="schema/default_load_options.exsd"/>
	
</plugin>
