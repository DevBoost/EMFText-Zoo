<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>
	<extension point="org.emftext.access.syntax">
		<metaInformationProvider class="org.emftext.language.regexp.resource.regexp.mopp.RegexpMetaInformation" id="org.emftext.language.regexp.resource.regexp.mopp.RegexpMetaInformation">
		</metaInformationProvider>
	</extension>
	
	<extension point="org.eclipse.ui.editors">
		<editor class="org.emftext.language.regexp.resource.regexp.ui.RegexpEditor" contributorClass="org.eclipse.ui.texteditor.BasicTextEditorActionContributor" extensions="regexp" icon="icons/editor_icon.gif" id="org.emftext.language.regexp.resource.regexp.ui.RegexpEditor" name="EMFText regexp Editor">
		</editor>
	</extension>
	
	<extension point="org.eclipse.core.runtime.preferences">
		<initializer class="org.emftext.language.regexp.resource.regexp.ui.RegexpPreferenceInitializer">
		</initializer>
	</extension>
	
	<extension point="org.eclipse.ui.preferencePages">
		<page name="Regexp Text Editor" id="org.emftext.language.regexp.resource.regexp.ui.RegexpPreferencePage" class="org.emftext.language.regexp.resource.regexp.ui.RegexpPreferencePage">
		</page>
		<page name="Syntax Coloring" id="org.emftext.language.regexp.resource.regexp.ui.RegexpSyntaxColoringPreferencePage" class="org.emftext.language.regexp.resource.regexp.ui.RegexpSyntaxColoringPreferencePage" category="org.emftext.language.regexp.resource.regexp.ui.RegexpPreferencePage">
		</page>
		<page name="Brackets" id="org.emftext.language.regexp.resource.regexp.ui.RegexpBracketPreferencePage" class="org.emftext.language.regexp.resource.regexp.ui.RegexpBracketPreferencePage" category="org.emftext.language.regexp.resource.regexp.ui.RegexpPreferencePage">
		</page>
		<page name="Occurrence" id="org.emftext.language.regexp.resource.regexp.ui.RegexpOccurrencePreferencePage" class="org.emftext.language.regexp.resource.regexp.ui.RegexpOccurrencePreferencePage" category="org.emftext.language.regexp.resource.regexp.ui.RegexpPreferencePage">
		</page>
	</extension>
	
	<extension point="org.eclipse.ui.newWizards">
		<category id="org.emftext.runtime.ui.EMFTextFileCategory" name="EMFText File">
		</category>
		<wizard category="org.emftext.runtime.ui.EMFTextFileCategory" icon="/icons/default_new_icon.gif" class="org.emftext.language.regexp.resource.regexp.ui.RegexpNewFileWizard" id="org.emftext.language.regexp.resource.regexp.ui.RegexpNewFileWizard" name="EMFText .regexp file">
		</wizard>
	</extension>
	
	<extension id="org.emftext.language.regexp.resource.regexp.problem" name="EMFText Problem" point="org.eclipse.core.resources.markers">
		<persistent value="true">
		</persistent>
		<super type="org.eclipse.core.resources.problemmarker">
		</super>
		<super type="org.eclipse.core.resources.textmarker">
		</super>
	</extension>
	
	<extension-point id="org.emftext.language.regexp.resource.regexp.default_load_options" name="Default Load Options" schema="schema/default_load_options.exsd"/>
	
	<extension point="org.eclipse.emf.ecore.extension_parser">
		<parser class="org.emftext.language.regexp.resource.regexp.mopp.RegexpResourceFactoryDelegator" type="regexp">
		</parser>
	</extension>
	
	<extension-point id="org.emftext.language.regexp.resource.regexp.additional_extension_parser" name="Additional Extension Parser" schema="schema/additional_extension_parser.exsd"/>
	
</plugin>
