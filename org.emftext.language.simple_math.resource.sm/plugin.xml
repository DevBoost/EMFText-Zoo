<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>
	<extension point="org.emftext.access.syntax">
		<metaInformationProvider class="org.emftext.language.simple_math.resource.sm.mopp.SmMetaInformation" id="org.emftext.language.simple_math.resource.sm.mopp.SmMetaInformation">
		</metaInformationProvider>
	</extension>
	
	<extension id="org.emftext.language.simple_math.resource.sm.nature" name="sm nature" point="org.eclipse.core.resources.natures">
		<runtime>
			<run class="org.emftext.language.simple_math.resource.sm.mopp.SmNature" />
		</runtime>
		<builder id="org.emftext.language.simple_math.resource.sm.builder" />
	</extension>
	
	<extension point="org.eclipse.core.resources.builders" id="org.emftext.language.simple_math.resource.sm.builder" name="sm Builder">
		<builder hasNature="true">
			<run class="org.emftext.language.simple_math.resource.sm.mopp.SmBuilderAdapter" />
		</builder>
	</extension>
	
	<extension-point id="org.emftext.language.simple_math.resource.sm.default_load_options" name="Default Load Options" schema="schema/default_load_options.exsd"/>
	
	<extension point="org.eclipse.emf.ecore.extension_parser">
		<parser class="org.emftext.language.simple_math.resource.sm.mopp.SmResourceFactoryDelegator" type="sm">
		</parser>
	</extension>
	
	<extension-point id="org.emftext.language.simple_math.resource.sm.additional_extension_parser" name="Additional Extension Parser" schema="schema/additional_extension_parser.exsd"/>
	
</plugin>
