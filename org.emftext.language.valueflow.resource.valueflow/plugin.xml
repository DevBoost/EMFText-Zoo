<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>
	<extension point="org.emftext.access.syntax">
		<metaInformationProvider class="org.emftext.language.valueflow.resource.valueflow.mopp.TextValueflowMetaInformation" id="org.emftext.language.valueflow.resource.valueflow.mopp.TextValueflowMetaInformation">
		</metaInformationProvider>
	</extension>
	
	<extension point="org.eclipse.ui.editors">
		<editor class="org.emftext.language.valueflow.resource.valueflow.ui.TextValueflowEditor" contributorClass="org.eclipse.ui.texteditor.BasicTextEditorActionContributor" extensions="valueflow" icon="icons/editor_icon.gif" id="org.emftext.language.valueflow.resource.valueflow.ui.TextValueflowEditor" name="EMFText text.valueflow Editor">
		</editor>
	</extension>
	
	<extension point="org.eclipse.core.runtime.preferences">
		<initializer class="org.emftext.language.valueflow.resource.valueflow.ui.TextValueflowPreferenceInitializer">
		</initializer>
	</extension>
	
	<extension point="org.eclipse.ui.preferencePages">
		<page name="TextValueflow Text Editor" id="org.emftext.language.valueflow.resource.valueflow.ui.TextValueflowPreferencePage" class="org.emftext.language.valueflow.resource.valueflow.ui.TextValueflowPreferencePage" category="org.eclipse.ui.preferencePages.GeneralTextEditor">
		</page>
		<page name="Syntax Coloring" id="org.emftext.language.valueflow.resource.valueflow.ui.TextValueflowSyntaxColoringPreferencePage" class="org.emftext.language.valueflow.resource.valueflow.ui.TextValueflowSyntaxColoringPreferencePage" category="org.emftext.language.valueflow.resource.valueflow.ui.TextValueflowPreferencePage">
		</page>
		<page name="Brackets" id="org.emftext.language.valueflow.resource.valueflow.ui.TextValueflowBracketPreferencePage" class="org.emftext.language.valueflow.resource.valueflow.ui.TextValueflowBracketPreferencePage" category="org.emftext.language.valueflow.resource.valueflow.ui.TextValueflowPreferencePage">
		</page>
		<page name="Occurrence" id="org.emftext.language.valueflow.resource.valueflow.ui.TextValueflowOccurrencePreferencePage" class="org.emftext.language.valueflow.resource.valueflow.ui.TextValueflowOccurrencePreferencePage" category="org.emftext.language.valueflow.resource.valueflow.ui.TextValueflowPreferencePage">
		</page>
	</extension>
	
	<extension point="org.eclipse.ui.newWizards">
		<category id="org.emftext.runtime.ui.EMFTextFileCategory" name="EMFText File">
		</category>
		<wizard category="org.emftext.runtime.ui.EMFTextFileCategory" icon="/icons/default_new_icon.gif" class="org.emftext.language.valueflow.resource.valueflow.ui.TextValueflowNewFileWizard" id="org.emftext.language.valueflow.resource.valueflow.ui.TextValueflowNewFileWizard" name="EMFText .text.valueflow file">
		</wizard>
	</extension>
	
	<extension id="org.emftext.language.valueflow.resource.valueflow.problem" name="EMFText Problem" point="org.eclipse.core.resources.markers">
		<persistent value="true">
		</persistent>
		<super type="org.eclipse.core.resources.problemmarker">
		</super>
		<super type="org.eclipse.core.resources.textmarker">
		</super>
	</extension>
	
	<extension id="org.emftext.language.valueflow.resource.valueflow.nature" name="text.valueflow nature" point="org.eclipse.core.resources.natures">
		<runtime>
			<run class="org.emftext.language.valueflow.resource.valueflow.mopp.TextValueflowNature" />
		</runtime>
		<builder id="org.emftext.language.valueflow.resource.valueflow.builder" />
	</extension>
	
	<extension point="org.eclipse.core.resources.builders" id="org.emftext.language.valueflow.resource.valueflow.builder" name="text.valueflow Builder">
		<builder hasNature="true">
			<run class="org.emftext.language.valueflow.resource.valueflow.mopp.TextValueflowBuilderAdapter" />
		</builder>
	</extension>
	
	<extension-point id="org.emftext.language.valueflow.resource.valueflow.default_load_options" name="Default Load Options" schema="schema/default_load_options.exsd"/>
	
	<extension point="org.emftext.language.valueflow.resource.additional_extension_parser">
		<parser class="org.emftext.language.valueflow.resource.valueflow.mopp.TextValueflowResourceFactory" type="text">
		</parser>
	</extension>
	
</plugin>
