package egui::statemodel

context State
def: incomingTransitions =
	 Transition.allInstances()->select(target = self)
def: outgoingTransitions =
	 Transition.allInstances()->select(source = self)
def: isInitialState =
	 self.incomingTransitions->size() = 0
def: isEndState =
	 self.outgoingTransitions->size() = 0

context StateModel
inv extactOneInitialState:
	states->select(isInitialState)->size() = 1
inv atLeastOneEndState:
	states->select(isEndState)->size() >= 1

endpackage