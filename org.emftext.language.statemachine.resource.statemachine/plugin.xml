<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>
	<extension point="org.eclipse.emf.ecore.extension_parser">
		<parser class="org.emftext.language.statemachine.resource.statemachine.mopp.StatemachineResourceFactory" type="statemachine">
		</parser>
	</extension>
	
	<extension point="org.emftext.access.syntax">
		<metaInformationProvider class="org.emftext.language.statemachine.resource.statemachine.mopp.StatemachineTextResourcePluginMetaInformation" id="org.emftext.language.statemachine.resource.statemachine.mopp.StatemachineTextResourcePluginMetaInformation">
		</metaInformationProvider>
	</extension>
	
	<extension point="org.eclipse.core.contenttype.contentTypes">
		<content-type id="org.emftext.filetype.statemachine" name="EMFText statemachine Files">
		</content-type>
		<file-association content-type="org.emftext.filetype.statemachine" file-extensions="statemachine">
		</file-association>
	</extension>
	
	<extension point="org.eclipse.ui.editors">
		<editor class="org.emftext.language.statemachine.resource.statemachine.ui.StatemachineEditor" contributorClass="org.eclipse.ui.texteditor.BasicTextEditorActionContributor" icon="icons/editor_icon.gif" id="org.emftext.language.statemachine.resource.statemachine.ui.StatemachineEditor" name="EMFText statemachine Editor">
			<contentTypeBinding contentTypeId="org.eclipse.core.runtime.text">
			</contentTypeBinding>
			<contentTypeBinding contentTypeId="org.emftext.filetype.statemachine" >
			</contentTypeBinding>
		</editor>
	</extension>
	
	<extension point="org.eclipse.core.runtime.preferences">
		<initializer class="org.emftext.language.statemachine.resource.statemachine.ui.StatemachinePreferenceInitializer">
		</initializer>
	</extension>
	
	<extension point="org.eclipse.ui.newWizards">
		<category id="org.emftext.runtime.ui.EMFTextFileCategory" name="EMFText File">
		</category>
		<wizard category="org.emftext.runtime.ui.EMFTextFileCategory" icon="/icons/default_new_icon.gif" class="org.emftext.language.statemachine.resource.statemachine.ui.StatemachineNewFileWizard" id="org.emftext.language.statemachine.resource.statemachine.ui.StatemachineNewFileWizard" name="EMFText .statemachine file">
		</wizard>
	</extension>
	
	<extension-point id="org.emftext.language.statemachine.resource.statemachine.default_load_options" name="Default Load Options" schema="schema/default_load_options.exsd"/>
	
</plugin>
