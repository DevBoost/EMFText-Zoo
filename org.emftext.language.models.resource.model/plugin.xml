<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>
	<extension point="org.eclipse.emf.ecore.extension_parser">
		<parser class="org.emftext.language.models.resource.model.mopp.ModelResourceFactory" type="model">
		</parser>
	</extension>
	
	<extension point="org.emftext.access.syntax">
		<metaInformationProvider class="org.emftext.language.models.resource.model.mopp.ModelTextResourcePluginMetaInformation" id="org.emftext.language.models.resource.model.mopp.ModelTextResourcePluginMetaInformation">
		</metaInformationProvider>
	</extension>
	
	<extension point="org.eclipse.core.contenttype.contentTypes">
		<content-type id="org.emftext.filetype.model" name="EMFText model Files">
		</content-type>
		<file-association content-type="org.emftext.filetype.model" file-extensions="model">
		</file-association>
	</extension>
	
	<extension point="org.eclipse.ui.editors">
		<editor class="org.emftext.language.models.resource.model.ui.ModelEditor" contributorClass="org.eclipse.ui.texteditor.BasicTextEditorActionContributor" icon="icons/editor_icon.gif" id="org.emftext.language.models.resource.model.ui.ModelEditor" name="EMFText model Editor">
			<contentTypeBinding contentTypeId="org.eclipse.core.runtime.text">
			</contentTypeBinding>
			<contentTypeBinding contentTypeId="org.emftext.filetype.model" >
			</contentTypeBinding>
		</editor>
	</extension>
	
	<extension point="org.eclipse.core.runtime.preferences">
		<initializer class="org.emftext.language.models.resource.model.ui.ModelPreferenceInitializer">
		</initializer>
	</extension>
	
	<extension point="org.eclipse.ui.newWizards">
		<category id="org.emftext.runtime.ui.EMFTextFileCategory" name="EMFText File">
		</category>
		<wizard category="org.emftext.runtime.ui.EMFTextFileCategory" icon="/icons/default_new_icon.gif" class="org.emftext.language.models.resource.model.ui.ModelNewFileWizard" id="org.emftext.language.models.resource.model.ui.ModelNewFileWizard" name="EMFText .model file">
		</wizard>
	</extension>
	
	<extension-point id="org.emftext.language.models.resource.model.default_load_options" name="Default Load Options" schema="schema/default_load_options.exsd"/>
	
</plugin>
