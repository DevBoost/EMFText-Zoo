<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>
	<extension point="org.emftext.access.syntax">
		<metaInformationProvider class="org.emftext.language.timedautomata.resource.ta.mopp.TaMetaInformation" id="org.emftext.language.timedautomata.resource.ta.mopp.TaMetaInformation">
		</metaInformationProvider>
	</extension>
	
	<extension point="org.eclipse.ui.editors">
		<editor class="org.emftext.language.timedautomata.resource.ta.ui.TaEditor" contributorClass="org.eclipse.ui.texteditor.BasicTextEditorActionContributor" extensions="ta" icon="icons/editor_icon.gif" id="org.emftext.language.timedautomata.resource.ta.ui.TaEditor" name="EMFText ta Editor">
		</editor>
	</extension>
	
	<extension point="org.eclipse.core.runtime.preferences">
		<initializer class="org.emftext.language.timedautomata.resource.ta.ui.TaPreferenceInitializer">
		</initializer>
	</extension>
	
	<extension point="org.eclipse.ui.preferencePages">
		<page name="Ta Text Editor" id="org.emftext.language.timedautomata.resource.ta.ui.TaPreferencePage" class="org.emftext.language.timedautomata.resource.ta.ui.TaPreferencePage" category="org.eclipse.ui.preferencePages.GeneralTextEditor">
		</page>
		<page name="Syntax Coloring" id="org.emftext.language.timedautomata.resource.ta.ui.TaSyntaxColoringPreferencePage" class="org.emftext.language.timedautomata.resource.ta.ui.TaSyntaxColoringPreferencePage" category="org.emftext.language.timedautomata.resource.ta.ui.TaPreferencePage">
		</page>
		<page name="Brackets" id="org.emftext.language.timedautomata.resource.ta.ui.TaBracketPreferencePage" class="org.emftext.language.timedautomata.resource.ta.ui.TaBracketPreferencePage" category="org.emftext.language.timedautomata.resource.ta.ui.TaPreferencePage">
		</page>
		<page name="Occurrence" id="org.emftext.language.timedautomata.resource.ta.ui.TaOccurrencePreferencePage" class="org.emftext.language.timedautomata.resource.ta.ui.TaOccurrencePreferencePage" category="org.emftext.language.timedautomata.resource.ta.ui.TaPreferencePage">
		</page>
	</extension>
	
	<extension point="org.eclipse.ui.newWizards">
		<category id="org.emftext.runtime.ui.EMFTextFileCategory" name="EMFText File">
		</category>
		<wizard category="org.emftext.runtime.ui.EMFTextFileCategory" icon="/icons/default_new_icon.gif" class="org.emftext.language.timedautomata.resource.ta.ui.TaNewFileWizard" id="org.emftext.language.timedautomata.resource.ta.ui.TaNewFileWizard" name="EMFText .ta file">
		</wizard>
	</extension>
	
	<extension id="org.emftext.language.timedautomata.resource.ta.problem" name="EMFText Problem" point="org.eclipse.core.resources.markers">
		<persistent value="true">
		</persistent>
		<super type="org.eclipse.core.resources.problemmarker">
		</super>
		<super type="org.eclipse.core.resources.textmarker">
		</super>
	</extension>
	
	<extension id="org.emftext.language.timedautomata.resource.ta.nature" name="ta nature" point="org.eclipse.core.resources.natures">
		<runtime>
			<run class="org.emftext.language.timedautomata.resource.ta.mopp.TaNature" />
		</runtime>
		<builder id="org.emftext.language.timedautomata.resource.ta.builder" />
	</extension>
	
	<extension point="org.eclipse.core.resources.builders" id="org.emftext.language.timedautomata.resource.ta.builder" name="ta Builder">
		<builder hasNature="true">
			<run class="org.emftext.language.timedautomata.resource.ta.mopp.TaBuilderAdapter" />
		</builder>
	</extension>
	
	<extension-point id="org.emftext.language.timedautomata.resource.ta.default_load_options" name="Default Load Options" schema="schema/default_load_options.exsd"/>
	
	<extension point="org.eclipse.emf.ecore.extension_parser">
		<parser class="org.emftext.language.timedautomata.resource.ta.mopp.TaResourceFactoryDelegator" type="ta">
		</parser>
	</extension>
	
	<extension-point id="org.emftext.language.timedautomata.resource.ta.additional_extension_parser" name="Additional Extension Parser" schema="schema/additional_extension_parser.exsd"/>
	
</plugin>
