<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>
	<extension point="org.emftext.access.syntax">
		<metaInformationProvider class="org.emftext.languages.abnf.resource.abnf.mopp.AbnfMetaInformation" id="org.emftext.languages.abnf.resource.abnf.mopp.AbnfMetaInformation">
		</metaInformationProvider>
	</extension>
	
	<extension point="org.eclipse.ui.editors">
		<editor class="org.emftext.languages.abnf.resource.abnf.ui.AbnfEditor" contributorClass="org.eclipse.ui.texteditor.BasicTextEditorActionContributor" extensions="abnf" icon="icons/editor_icon.gif" id="org.emftext.languages.abnf.resource.abnf.ui.AbnfEditor" name="EMFText abnf Editor">
		</editor>
	</extension>
	
	<extension point="org.eclipse.core.runtime.preferences">
		<initializer class="org.emftext.languages.abnf.resource.abnf.ui.AbnfPreferenceInitializer">
		</initializer>
	</extension>
	
	<extension point="org.eclipse.ui.preferencePages">
		<page name="Abnf Text Editor" id="org.emftext.languages.abnf.resource.abnf.ui.AbnfPreferencePage" class="org.emftext.languages.abnf.resource.abnf.ui.AbnfPreferencePage" category="org.eclipse.ui.preferencePages.GeneralTextEditor">
		</page>
		<page name="Syntax Coloring" id="org.emftext.languages.abnf.resource.abnf.ui.AbnfSyntaxColoringPreferencePage" class="org.emftext.languages.abnf.resource.abnf.ui.AbnfSyntaxColoringPreferencePage" category="org.emftext.languages.abnf.resource.abnf.ui.AbnfPreferencePage">
		</page>
		<page name="Brackets" id="org.emftext.languages.abnf.resource.abnf.ui.AbnfBracketPreferencePage" class="org.emftext.languages.abnf.resource.abnf.ui.AbnfBracketPreferencePage" category="org.emftext.languages.abnf.resource.abnf.ui.AbnfPreferencePage">
		</page>
		<page name="Occurrence" id="org.emftext.languages.abnf.resource.abnf.ui.AbnfOccurrencePreferencePage" class="org.emftext.languages.abnf.resource.abnf.ui.AbnfOccurrencePreferencePage" category="org.emftext.languages.abnf.resource.abnf.ui.AbnfPreferencePage">
		</page>
	</extension>
	
	<extension point="org.eclipse.ui.newWizards">
		<category id="org.emftext.runtime.ui.EMFTextFileCategory" name="EMFText File">
		</category>
		<wizard category="org.emftext.runtime.ui.EMFTextFileCategory" icon="/icons/default_new_icon.gif" class="org.emftext.languages.abnf.resource.abnf.ui.AbnfNewFileWizard" id="org.emftext.languages.abnf.resource.abnf.ui.AbnfNewFileWizard" name="EMFText .abnf file">
		</wizard>
	</extension>
	
	<extension id="org.emftext.languages.abnf.resource.abnf.problem" name="EMFText Problem" point="org.eclipse.core.resources.markers">
		<persistent value="true">
		</persistent>
		<super type="org.eclipse.core.resources.problemmarker">
		</super>
		<super type="org.eclipse.core.resources.textmarker">
		</super>
	</extension>
	
	<extension id="org.emftext.languages.abnf.resource.abnf.nature" name="abnf nature" point="org.eclipse.core.resources.natures">
		<runtime>
			<run class="org.emftext.languages.abnf.resource.abnf.mopp.AbnfNature" />
		</runtime>
		<builder id="org.emftext.languages.abnf.resource.abnf.builder" />
	</extension>
	
	<extension point="org.eclipse.core.resources.builders" id="org.emftext.languages.abnf.resource.abnf.builder" name="abnf Builder">
		<builder hasNature="true">
			<run class="org.emftext.languages.abnf.resource.abnf.mopp.AbnfBuilderAdapter" />
		</builder>
	</extension>
	
	<extension-point id="org.emftext.languages.abnf.resource.abnf.default_load_options" name="Default Load Options" schema="schema/default_load_options.exsd"/>
	
	<extension point="org.eclipse.emf.ecore.extension_parser">
		<parser class="org.emftext.languages.abnf.resource.abnf.mopp.AbnfResourceFactoryDelegator" type="abnf">
		</parser>
	</extension>
	
	<extension-point id="org.emftext.languages.abnf.resource.abnf.additional_extension_parser" name="Additional Extension Parser" schema="schema/additional_extension_parser.exsd"/>
	
</plugin>
