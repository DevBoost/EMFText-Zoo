<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>
	<extension point="org.emftext.access.syntax">
		<metaInformationProvider class="org.emftext.language.xmas.resource.xmas.mopp.XmasMetaInformation" id="org.emftext.language.xmas.resource.xmas.mopp.XmasMetaInformation">
		</metaInformationProvider>
	</extension>
	
	<extension point="org.eclipse.ui.editors">
		<editor class="org.emftext.language.xmas.resource.xmas.ui.XmasEditor" contributorClass="org.eclipse.ui.texteditor.BasicTextEditorActionContributor" extensions="xmas" icon="icons/editor_icon.gif" id="org.emftext.language.xmas.resource.xmas.ui.XmasEditor" name="EMFText xmas Editor">
		</editor>
	</extension>
	
	<extension point="org.eclipse.core.runtime.preferences">
		<initializer class="org.emftext.language.xmas.resource.xmas.ui.XmasPreferenceInitializer">
		</initializer>
	</extension>
	
	<extension point="org.eclipse.ui.preferencePages">
		<page name="Xmas Text Editor" id="org.emftext.language.xmas.resource.xmas.ui.XmasPreferencePage" class="org.emftext.language.xmas.resource.xmas.ui.XmasPreferencePage" category="org.eclipse.ui.preferencePages.GeneralTextEditor">
		</page>
		<page name="Syntax Coloring" id="org.emftext.language.xmas.resource.xmas.ui.XmasSyntaxColoringPreferencePage" class="org.emftext.language.xmas.resource.xmas.ui.XmasSyntaxColoringPreferencePage" category="org.emftext.language.xmas.resource.xmas.ui.XmasPreferencePage">
		</page>
		<page name="Brackets" id="org.emftext.language.xmas.resource.xmas.ui.XmasBracketPreferencePage" class="org.emftext.language.xmas.resource.xmas.ui.XmasBracketPreferencePage" category="org.emftext.language.xmas.resource.xmas.ui.XmasPreferencePage">
		</page>
		<page name="Occurrence" id="org.emftext.language.xmas.resource.xmas.ui.XmasOccurrencePreferencePage" class="org.emftext.language.xmas.resource.xmas.ui.XmasOccurrencePreferencePage" category="org.emftext.language.xmas.resource.xmas.ui.XmasPreferencePage">
		</page>
	</extension>
	
	<extension point="org.eclipse.ui.newWizards">
		<category id="org.emftext.runtime.ui.EMFTextFileCategory" name="EMFText File">
		</category>
		<wizard category="org.emftext.runtime.ui.EMFTextFileCategory" icon="/icons/default_new_icon.gif" class="org.emftext.language.xmas.resource.xmas.ui.XmasNewFileWizard" id="org.emftext.language.xmas.resource.xmas.ui.XmasNewFileWizard" name="EMFText .xmas file">
		</wizard>
	</extension>
	
	<extension id="org.emftext.language.xmas.resource.xmas.problem" name="EMFText Problem" point="org.eclipse.core.resources.markers">
		<persistent value="true">
		</persistent>
		<super type="org.eclipse.core.resources.problemmarker">
		</super>
		<super type="org.eclipse.core.resources.textmarker">
		</super>
	</extension>
	
	<extension id="org.emftext.language.xmas.resource.xmas.nature" name="xmas nature" point="org.eclipse.core.resources.natures">
		<runtime>
			<run class="org.emftext.language.xmas.resource.xmas.mopp.XmasNature" />
		</runtime>
		<builder id="org.emftext.language.xmas.resource.xmas.builder" />
	</extension>
	
	<extension point="org.eclipse.core.resources.builders" id="org.emftext.language.xmas.resource.xmas.builder" name="xmas Builder">
		<builder hasNature="true">
			<run class="org.emftext.language.xmas.resource.xmas.mopp.XmasBuilderAdapter" />
		</builder>
	</extension>
	
	<extension-point id="org.emftext.language.xmas.resource.xmas.default_load_options" name="Default Load Options" schema="schema/default_load_options.exsd"/>
	
	<extension point="org.eclipse.emf.ecore.extension_parser">
		<parser class="org.emftext.language.xmas.resource.xmas.mopp.XmasResourceFactoryDelegator" type="xmas">
		</parser>
	</extension>
	
	<extension-point id="org.emftext.language.xmas.resource.xmas.additional_extension_parser" name="Additional Extension Parser" schema="schema/additional_extension_parser.exsd"/>
	
</plugin>
