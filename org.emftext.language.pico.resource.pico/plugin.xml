<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>
	<extension point="org.eclipse.emf.ecore.extension_parser">
		<parser class="org.emftext.language.pico.resource.pico.mopp.PicoResourceFactory" type="pico">
		</parser>
	</extension>
	
	<extension point="org.emftext.access.syntax">
		<metaInformationProvider class="org.emftext.language.pico.resource.pico.mopp.PicoTextResourcePluginMetaInformation" id="org.emftext.language.pico.resource.pico.mopp.PicoTextResourcePluginMetaInformation">
		</metaInformationProvider>
	</extension>
	
	<extension point="org.eclipse.core.contenttype.contentTypes">
		<content-type id="org.emftext.filetype.pico" name="EMFText pico Files">
		</content-type>
		<file-association content-type="org.emftext.filetype.pico" file-extensions="pico">
		</file-association>
	</extension>
	
	<extension point="org.eclipse.ui.editors">
		<editor class="org.emftext.language.pico.resource.pico.ui.PicoEditor" contributorClass="org.eclipse.ui.texteditor.BasicTextEditorActionContributor" icon="icons/editor_icon.gif" id="org.emftext.language.pico.resource.pico.ui.PicoEditor" name="EMFText pico Editor">
			<contentTypeBinding contentTypeId="org.eclipse.core.runtime.text">
			</contentTypeBinding>
			<contentTypeBinding contentTypeId="org.emftext.filetype.pico" >
			</contentTypeBinding>
		</editor>
	</extension>
	
	<extension point="org.eclipse.core.runtime.preferences">
		<initializer class="org.emftext.language.pico.resource.pico.ui.PicoPreferenceInitializer">
		</initializer>
	</extension>
	
	<extension point="org.eclipse.ui.newWizards">
		<category id="org.emftext.runtime.ui.EMFTextFileCategory" name="EMFText File">
		</category>
		<wizard category="org.emftext.runtime.ui.EMFTextFileCategory" icon="/icons/default_new_icon.gif" class="org.emftext.language.pico.resource.pico.ui.PicoNewFileWizard" id="org.emftext.language.pico.resource.pico.ui.PicoNewFileWizard" name="EMFText .pico file">
		</wizard>
	</extension>
	
	<extension-point id="org.emftext.language.pico.resource.pico.default_load_options" name="Default Load Options" schema="schema/default_load_options.exsd"/>
	
</plugin>
